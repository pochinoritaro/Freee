    "parameters": [
        {
            "name": "employee_id",
            "in": "path",
            "description": "従業員ID",
            "required": true,
            "schema": {
                "type": "integer",
                "minimum": 1,
                "maximum": 2147483647,
                "example": 1
            }
        },
        {
            "name": "year",
            "in": "path",
            "description": "更新対象年",
            "required": true,
            "schema": {
                "type": "integer",
                "minimum": 2000,
                "maximum": 2100,
                "example": 2021
            }
        },
        {
            "name": "month",
            "in": "path",
            "description": "更新対象月",
            "required": true,
            "schema": {
                "type": "integer",
                "minimum": 1,
                "maximum": 12,
